    <li><a href="{% url 'organizations-organization' ein=850359138 %}">Habitat for Humanity International</a></li>
    <li><a href="{% url 'organizations-organization' ein=520591700 %}">YMCA of the USA</a></li>
    <li><a href="{% url 'organizations-organization' ein=911910917 %}">Compassion International</a></li>
    <li><a href="{% url 'organizations-organization' ein=352129067 %}">Boys and Girls Clubs of America</a></li>
    <li><a href="{% url 'organizations-organization' ein=470378996 %}">Goodwill Industries International</a></li>
  
</div>




{% endblock content %}